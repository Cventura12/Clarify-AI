generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  QUEUED
  IN_PROGRESS
  BLOCKED
  DONE
}

enum PipelineStatus {
  PENDING
  PLANNING
  EXECUTING
  COMPLETE
  FAILED
}

enum ActionType {
  DRAFT_EMAIL
  GENERATE_DOC
  FILL_FORM
  SET_REMINDER
}

model User {
  id         String     @id @default(cuid())
  email      String     @unique
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  tasks      Task[]
  obligations Obligation[]
  pipelines  Pipeline[]
}

model Task {
  id          String     @id @default(cuid())
  userId      String
  title       String
  description String?
  status      TaskStatus @default(QUEUED)
  priority    Int        @default(0)
  dueAt       DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id])
  pipelineId  String?
  pipeline    Pipeline?  @relation(fields: [pipelineId], references: [id])

  @@index([userId])
}

model Obligation {
  id        String   @id @default(cuid())
  userId    String
  name      String
  dueAt     DateTime?
  status    String   @default("open")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Pipeline {
  id           String         @id @default(cuid())
  userId       String
  sourceText   String
  interpretJson Json?
  planJson     Json?
  status       PipelineStatus @default(PENDING)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  user         User           @relation(fields: [userId], references: [id])
  steps        Step[]
  tasks        Task[]

  @@index([userId])
}

model Step {
  id         String     @id @default(cuid())
  pipelineId String
  title      String
  order      Int
  status     TaskStatus @default(QUEUED)
  actionType ActionType
  payload    Json?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  pipeline   Pipeline   @relation(fields: [pipelineId], references: [id])

  @@index([pipelineId])
}
